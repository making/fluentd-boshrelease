---
name: fluentd_storer

templates:
  fluentd-ctl.erb: bin/fluentd-ctl
  fluentd.conf: config/fluentd.conf
  syslog.conf: config/config.d/syslog.conf

packages:
- fluentd

properties:
  syslog.tag:
    description: "The prefix of the tag."
    default: fluentd_storer
  syslog.port:
    description: "The port to listen to."
    default: 5140
  syslog.protocol_type:
    description: "The transport protocol used to receive logs.  (udp, tcp)"
    default: tcp
  syslog.message_format:
    description: "Specify protocol format. (rfc3164, rfc5424 and auto)"
    default: rfc5424